<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.grupohi.almacenes.controlmaquinaria.CierreActividadesFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="CERRAR ACTIVIDAD MAQUINARIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tipo de Hora"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/tv_actividadesCierreTipoHora"
                android:text="aa-bb-cc-dd-ee-ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Turno"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/tv_actividadesCierreTurno"
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
            <TextView
                android:text="Cantidad"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/tv_actividadesCierreHorasTot"
                android:text="00:00"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Clave Actividad"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/tv_actividadesCierreClaveActividad"
                android:text="aa-bb-cc-dd-ee-ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Fecha / Hora de Inicio"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/tv_actividadesCierreHoraInicio"
                android:text="12:00 am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Fecha / Hora de Termino"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold"/>
            <TextView
                android:id="@+id/tv_actividadesCierreHoraTermino"
                android:text="12:00 am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_actividadesEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Actividad con cargo a la empresa?"
                android:enabled="false"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Observaciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:id="@+id/et_actividadesObservacionesFinales"
                android:layout_weight="0.37"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:text="Cancelar"
                android:textAlignment="center"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_actividadesCierreCancelar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="20sp" />

            <Button
                android:text="Guardar"
                android:textAlignment="center"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_actividadesCierreGuardar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
