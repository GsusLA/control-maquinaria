<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.grupohi.almacenes.controlmaquinaria.InicioActividadesFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:text="INICIAR ACTIVIDAD MAQUINARIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="Tipo de Hora"
                android:layout_weight="0.66" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/sp_actividadInicioHora"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:entries="@array/array_tipo_hora"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hora de inicio: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
            <TextView
                android:id="@+id/tv_actividadesInicioHora"
                android:text="00:00 am "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/rg_ActividadesInicioRadBotones"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="Primero"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_primerTurno"/>
                <RadioButton
                    android:text="Segundo"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_segundoTurno"/>

                <RadioButton
                    android:text="Tercero"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_tercerTurno"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Clave de la Actividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:id="@+id/et_actividadesClaveActividad"
                android:layout_weight="0.37"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textSize="14sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_actividadesEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Actividad con cargo a la empresa?"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Observaciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:id="@+id/et_actividadesObservaciones"
                android:layout_weight="0.37"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textSize="12sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:text="Cancelar"
                android:textAlignment="center"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_actividadInicioCancelar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="20sp" />

            <Button
                android:text="Guardar"
                android:textAlignment="center"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_actividadesInicioGuardar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</FrameLayout>
